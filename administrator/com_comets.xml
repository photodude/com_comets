<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="component" method="upgrade">
	<name>Commets</name>
	<creationDate>2016-05-01</creationDate>
	<author>Troy Hall</author>
	<authorEmail>troy@hallhome.us</authorEmail>
	<authorUrl>http://arksky.org</authorUrl>
	<copyright>2016 Troy Hall &amp; Arkansas Sky Observatory</copyright>
	<license>GNU GPL v3 or later</license>
	<version>1.0.3-FOF3</version>
	<description>ASO Comet observations system.</description>

	<!-- SQL query files to execute on installation -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
			<file driver="mysqli" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<update> <!-- Runs on update -->
		<sql>
			<file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
			<file driver="mysqli" charset="utf8">sql/update.mysql.utf8.sql</file>
		</sql>
	</update>
	<!-- SQL query files to execute on uninstallation -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			<file driver="mysqli" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu view="cpanel" img="media/com_comets/images/s_com_comets.png">COM_COMETS</menu>

		<!-- Back-end files -->
		<files folder="backend">
			<folder>sql</folder>

			<filename>access.xml</filename>
			<filename>com_comets.xml</filename>
			<filename>config.xml</filename>
			<filename>fof.xml</filename>
			<filename>index.html</filename>
			<filename>comets.php</filename>
		</files>

	</administration>
</extension>
